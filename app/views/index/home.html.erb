<html lang="en">
<head>
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <p class="title-md"style="color: green"><%= notice %></p>

        <h1><%= t("all-services") %></h1>
        <div class="grid-container">
        <% @services_by_type.each do |service_type, services| %>
            <div class="service-type-container">
            <h2 class="grid-item"><%= service_type %></h2>
            <ul class="service-list">
                <% services.each do |service| %>
                <li><%= link_to service.title, service_path(service) %></li>
                <% end %>
            </ul>
            </div>
        <% end %>
        </div>


        <footer class="footer">
            <div class="row">
                <div class="footer-col">
                    <h4><%= t("about-us") %></h4>
                    <ul>
                        <li><a href="#"><%= t("bee-proj") %></a></li>
                        <li><a href="#"><%= t("contact") %></a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4><%= t("how-it-works") %></h4>
                    <ul>
                        <li><a href="#"><%= t("how-to-order") %></a></li>
                        <li><a href="#"><%= t("how-to-reg") %></a></li>
                        <li><a href="#"><%= t("warranty-safety") %></a></li>
                        <li><a href="#"><%= t("latest-rev") %></a></li>
                        <li><a href="#"><%= t("top-perf") %></a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4><%= t("help") %></h4>
                    <ul>
                        <li><a href="#"><%= t("QA") %></a></li>
                        <li><a href="#"><%= t("PP") %></a></li>
                        <li><a href="#"><%= t("PO") %></a></li>
                        <li><a href="#"><%= t("support-service") %></a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4><%= t("follow-us") %></h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </footer>

    </div>

</body>
</html>